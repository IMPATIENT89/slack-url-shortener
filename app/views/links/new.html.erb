<%= render 'layouts/errors', obj: @link %>
<div class="container " id="cntsgnup"> 
  <div class="row justify-content-center">
    <div class="col-9">
      <%= form_with(model: @link, local: true, remote: true) do |form| %>
        <div class="form-group justify-content-center row mt-3">
          <h3 class="text-center"><%= form.label :original_url, "Enter URL", class: "col-form-label text-dark" %></h3>
          <div class="col-8">
            <%= form.text_field :original_url, class: "form-control shadow mb-4 bg-white rounded", placeholder: "Enter URL..." %>
          </div>
        </div>
        <div class="input-group justify-content-center mb-3">
          <%= form.submit class: "btn btn-outline-dark btn-lg text-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
